@model MenuIndexVM
@section Links{
    <link href="~/css/menu/style.css" rel="stylesheet" />
}
@{
    ViewData["Title"] = "Index";
    ViewData["activeLink"] = "Menu";
}

@section Title{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="head-title">
                    <h1>our menu</h1>
                </div>
            </div>
        </div>
    </div>
}

<div style="clear: both;"></div>
<!-- Hot Bevegares Section Start -->
<section class="menu-section-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="menu-title">
                    <h1>HOT BEVERAGES</h1>
                    <div class="menu-hr d-flex justify-content-center">
                        <img src="image/title-separator.png" alt="">
                    </div>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore</p>
                </div>
            </div>
            @foreach (var item in Model.hotMenus)
            {
                <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                    <div class="menu-item d-flex">
                        <div class="menu-img">
                            <img src="~/image/@(item.Image)" alt="">
                        </div>
                        <div class="menu-item">
                            <div class="menu-top d-flex align-items-center justify-content-between w-100">
                                <h5>@item.Name</h5>
                                <div class="menu-hr"></div>
                                <h6>$@item.Price</h6>
                            </div>
                            <div class="menu-bottom">
                                <p>@item.Ingredients</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Hot Bevegares Section End -->
<div style="clear: both;"></div>
<!-- Cold Bevegares Section Start -->
<section class="menu-section-1 menu-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="menu-title">
                    <h1>COLD BEVERAGES</h1>
                    <div class="menu-hr d-flex justify-content-center">
                        <img src="image/title-separator.png" alt="">
                    </div>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore</p>
                </div>
            </div>
            @foreach (var item in Model.coldMenus)
            {
                <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                    <div class="menu-item d-flex">
                        <div class="menu-img">
                            <img src="~/image/@(item.Image)" alt="">
                        </div>
                        <div class="menu-item">
                            <div class="menu-top d-flex align-items-center justify-content-between w-100">
                                <h5>@item.Name</h5>
                                <div class="menu-hr"></div>
                                <h6>$@item.Price</h6>
                            </div>
                            <div class="menu-bottom">
                                <p>@item.Ingredients</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Cold Bevegares Section End -->

@section Scripts{
    <script src="~/js/menu/main.js"></script>
}
