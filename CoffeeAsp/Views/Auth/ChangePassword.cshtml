@model ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
    ViewData["activeLink"] = "Shop";
}

@section Links{
    <link href="~/css/login/style.css" rel="stylesheet" />
}

@section Title{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="head-title">
                    <h1>change password</h1>
                </div>
            </div>
        </div>
    </div>
}

<div style="clear: both;"></div>
<!-- Login Section Start -->
<section class="login-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="login-item">
                    <h1 class="text-center">change password</h1>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CurrentPassword">Current Password *</label>
                            <input class="text-input form-control" type="password" asp-for="CurrentPassword">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword">Password *</label>
                            <input class="text-input form-control" type="password" asp-for="NewPassword">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewConfirmPassword">Confirm Password *</label>
                            <input class="text-input form-control" type="password" asp-for="NewConfirmPassword">
                            <span asp-validation-for="NewConfirmPassword" class="text-danger"></span>
                        </div>
                        <input class="input-btn" type="submit" value="CHANGE PASSWORD">
                    </form>
                    <a asp-controller="Auth" asp-action="Login">Log In!</a>
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
</section>
<!-- Login Section End -->
<div style="clear: both;"></div>

@section Scripts{
    <script src="~/js/login/main.js"></script>
}

