@model HotMenu
@{
    ViewData["Title"] = "Edit";
    ViewData["activeTab"] = "HotMenu";
}

<form method="post" class="w-100" enctype="multipart/form-data">
    <div class="form-group">
        <label>Current Image</label>
        <br />
        <img src="~/image/@(Model.Image)" width="70" alt="" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <input asp-for="Ingredients" class="form-control" />
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" accept="image/" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <input type="submit" value="Update" class="btn btn-lg btn-block btn-primary w-100" />
</form>

