@model HotMenu
@{
    ViewData["Title"] = "Detail";
    ViewData["activeTab"] = "HotMenu";
}

<dl>
    <dt>Image</dt>
    <dd><img src="~/image/@(Model.Image)" width="70" alt="Alternate Text" /></dd>
    <dt>Name</dt>
    <dd>@Model.Name</dd>
    <dt>Price</dt>
    <dd>$@Model.Price</dd>
    <dt>Ingredients</dt>
    <dd>@Model.Ingredients</dd>
</dl>

