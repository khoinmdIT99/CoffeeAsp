@model Gallery
@{
    ViewData["Title"] = "Edit";
}

<form method="post" enctype="multipart/form-data" class="w-100">
    <div class="form-group">
        <label>Current Image</label>
        <img src="~/image/@Model.Image" width="300" alt="" />
    </div>
    <div class="form-group">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" accept="image/" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <input type="submit" value="Update" class="btn btn-lg btn-block btn-primary" />
</form>
<a href="/Admin/Gallery/Index" class="w-100 btn btn-lg btn-block btn-danger">Back</a>

